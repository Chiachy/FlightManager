<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shanshan.flightmanager">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".ToolClassies.FlightManagerApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.ActivityFlightBrowsing" />
        <activity
            android:name=".Activities.ActivityFlightDetails"
            android:label="@string/title_activity_activity_flight_details" />
        <activity
            android:name=".Activities.ActivityUserLogin"
            android:label="@string/title_activity_activity_user_login" />
        <activity android:name=".Activities.ActivityManagerView" />
        <activity android:name=".Activities.ActivityUserDetails" />
        <activity android:name=".Activities.ActivitySignUp" />
        <activity android:name=".Activities.ActivitySearch" />
        <activity android:name=".Activities.ActivitySearchResult" />
        <activity android:name=".Fragments.DialogFlightAdd" />
        <activity android:name=".Fragments.DialogUserDelete" />
        <activity android:name=".Fragments.DialogOrderDelete" />
        <activity android:name=".Fragments.DialogFlightDelete" />
        <activity android:name=".Fragments.DialogOrderSearch" />
        <activity android:name=".Fragments.DialogUpdateFlightData" />
        <activity android:name=".Activities.RecviewActivityOrderManaging" />
        <activity android:name=".Activities.ActivityBooking" />
        <activity android:name=".Activities.ActivityManagerViewNew" />
        <activity
            android:name=".Activities.ActivityBeginningAnimation"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.RecviewActivityFlightManaging" />
        <activity android:name=".Activities.RecviewActivityUserManaging" />
        <activity
            android:name=".Activities.ActivityCanlander"
            android:label="@string/title_activity_activity_canlander"></activity>
    </application>

</manifest>