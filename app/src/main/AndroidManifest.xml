<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shanshan.flightmanager">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".FlightSystemApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ActivityFlightBrowsing" />
        <activity
            android:name=".ActivityFlightDetails"
            android:label="@string/title_activity_activity_flight_details" />
        <activity
            android:name=".ActivityUserLogin"
            android:label="@string/title_activity_activity_user_login" />
        <activity android:name=".ActivityManagerView" />
        <activity android:name=".ActivityUserDetails" />
        <activity android:name=".ActivitySignUp" />
        <activity android:name=".ActivitySearch" />
        <activity android:name=".ActivitySearchResult" />
        <activity android:name=".DialogFlightAdd" />
        <activity android:name=".DialogUserDelete" />
        <activity android:name=".DialogOrderDelete" />
        <activity android:name=".DialogFlightDelete" />
        <activity android:name=".DialogOrderSearch" />
        <activity android:name=".DialogUpdateFlightData" />
        <activity android:name=".ActivityForRecyclerView" />
        <activity android:name=".ActivityBooking" />
        <activity android:name=".ActivityManagerViewNew" />
        <activity
            android:name=".ActivityBeginningAnimation"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>