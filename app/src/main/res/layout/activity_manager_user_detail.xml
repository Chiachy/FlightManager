<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#e2e2e2"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chiachy.flightmanager.Activities.ManagerUserDetailActivity">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/content_manager_user_detail"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:id="@+id/include" />

    <Toolbar
        android:background="@color/skyBlue"
        android:title="@string/user_details"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@id/user_details_toolbar"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/manager_user_clear_account"
        android:scaleType="centerInside"
        android:src="@drawable/presence_offline"
        android:background="@color/crystal"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="15dp"
        android:layout_below="@+id/manager_user_clear_name"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:scaleType="centerInside"
        android:background="@color/crystal"
        android:src="@drawable/presence_offline"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/manager_user_clear_name"
        android:layout_marginStart="110dp"
        android:layout_marginTop="24dp"
        android:layout_alignTop="@+id/include"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:scaleType="centerInside"
        android:background="@color/crystal"
        android:src="@drawable/presence_offline"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/manager_user_clear_age"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="79dp"
        android:layout_below="@+id/manager_user_clear_account"
        android:layout_toStartOf="@+id/manager_user_clear_account" />
</RelativeLayout>
