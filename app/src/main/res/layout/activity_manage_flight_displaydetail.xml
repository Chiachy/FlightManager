<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ManageFlightDisplayDetailActivity">

    <Toolbar
        android:id="@+id/manage_details_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/skyBlue"
        android:title="@string/flight_details" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="航空公司"
        android:textColor="@color/blueDark"
        android:textSize="35sp"
        android:id="@+id/manage_flight_company_id"
        android:layout_marginStart="25dp"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/manage_details_toolbar"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="MF1302"
        android:textColor="@color/skyBlueDark"
        android:textSize="27sp"
        android:id="@+id/manage_flight_number"
        android:layout_above="@+id/textView7"
        android:layout_toEndOf="@+id/manage_flight_day"
        android:layout_marginStart="18dp" />

    <TextView
        android:textSize="23sp"
        android:textColor="@color/skyBlueDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="出发地点："
        android:id="@+id/textView2"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/textView12"
        android:layout_alignStart="@+id/textView12" />

    <TextView
        android:textSize="23sp"
        android:textColor="@color/skyBlueDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="到达地点："
        android:id="@+id/textView3"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:textSize="23sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="北京"
        android:id="@+id/manage_flight_where_from"
        android:layout_above="@+id/textView3"
        android:layout_alignEnd="@+id/manage_flight_time_end" />

    <TextView
        android:textSize="23sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="深圳"
        android:id="@+id/manage_flight_where_to"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignStart="@+id/manage_flight_where_from" />

    <TextView
        android:textSize="23sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="日期："
        android:textColor="@color/skyBlueDark"
        android:id="@+id/textView7"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/manage_flight_company_id"
        android:layout_alignStart="@+id/manage_flight_company_id" />

    <TextView
        android:textSize="23sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="2009.9.24"
        android:id="@+id/manage_flight_day"
        android:layout_alignTop="@+id/textView7"
        android:layout_toEndOf="@+id/textView7" />

    <TextView
        android:textSize="23sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="出发时间："
        android:textColor="@color/skyBlueDark"
        android:id="@+id/textView10"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <TextView
        android:textSize="23sp"
        android:textColor="@color/skyBlueDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="到达时间："
        android:id="@+id/textView12"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/textView10"
        android:layout_alignStart="@+id/textView10" />

    <TextView
        android:textSize="23sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="8:00"
        android:id="@+id/manage_flight_time_begin"
        android:layout_above="@+id/textView12"
        android:layout_toEndOf="@+id/textView10" />

    <TextView
        android:textSize="23sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="9:00"
        android:id="@+id/manage_flight_time_end"
        android:layout_above="@+id/textView2"
        android:layout_alignStart="@+id/manage_flight_time_begin" />

    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/manage_flight_number"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout3">

        <Button
            android:textColor="@color/white"
            android:layout_marginBottom="8dp"
            android:background="@color/skyBlue"
            android:text="更改航班信息"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/manage_flight_update_btn" />

        <Button
            android:textColor="@color/white"
            android:layout_marginBottom="8dp"
            android:background="@color/skyBlue"
            android:text="删除本次航班"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/manage_flight_delete_btn" />

    </LinearLayout>

    <TextView
        android:textSize="23sp"
        android:textColor="@color/skyBlueDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="中转城市："
        android:id="@+id/textView"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:textSize="23sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="深圳"
        android:id="@+id/manage_flight_transcity"
        android:layout_alignTop="@+id/textView"
        android:layout_alignStart="@+id/manage_flight_time_end" />

</RelativeLayout>
