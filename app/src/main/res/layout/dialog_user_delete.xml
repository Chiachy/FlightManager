<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.DialogUserDelete">

    <Toolbar
        android:background="@color/skyBlue"
        android:titleTextColor="#ffffff"
        android:title="删除账户"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/dialog_user_toolbar" />

    <LinearLayout
        android:id="@+id/user_delete_linear"
        android:background="#f2f2f2"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:layout_below="@id/dialog_user_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:paddingTop="45dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="请输入被删除的账户名："
            android:layout_gravity="center_horizontal" />

        <EditText
            android:paddingTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dia_delete_user" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认删除 "
            android:id="@+id/user_delete_confirm_btn"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/user_delete_recyclerview"
        android:layout_below="@id/user_delete_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</RelativeLayout>
