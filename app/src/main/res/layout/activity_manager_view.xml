<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ActivityManagerView">


    <Toolbar
        android:id="@+id/manager_view_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/skyBlue"
        android:title="@string/activity_manager_view" />

    <android.support.v4.view.ViewPager
        android:id="@+id/manager_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/manager_view_toolbar">

        <android.support.v4.view.PagerTabStrip
            android:id="@+id/view_pager_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingEnd="4dp" />

    </android.support.v4.view.ViewPager>

</RelativeLayout>
