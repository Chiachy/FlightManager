<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shanshan.flightmanager.RecviewActivityFlightManaging">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rec_flight_managing"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_above="@id/rec_flight_managing"
        android:id="@+id/fragment_flight_btns"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="添加航班信息"
            android:id="@+id/button_add"
            android:layout_width="0dp" />

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="更改航班信息"
            android:id="@+id/update_flight" />

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="删除航班信息"
            android:id="@+id/delete_flight" />

    </LinearLayout>

</RelativeLayout>
